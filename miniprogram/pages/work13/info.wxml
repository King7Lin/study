<!-- 内容滚动区 -->
<scroll-view class="content-info" scroll-y="true">
<!-- 轮播 -->
  <swiper class="content-info-slide" indicator-color="rgba(255,255,255,.5)"
  indicator-active-color="#fff" indicator-dots="true">
    <swiper-item>
      <image src="images/cover.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="images/cover.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="images/cover.jpg"></image>
    </swiper-item>
  </swiper>
  <!-- 功能按钮 -->
  <view class="content-info-portal">
    <view>
      <image src="images/04.png"></image>
      <text>当时歌曲专栏</text>
    </view>
    <view>
      <image src="images/05.png"></image>
      <text>每日歌曲专栏</text>
    </view>
    <view>
      <image src="images/06.png"></image>
      <text>最热红歌排行榜</text>
    </view>
  </view>
  <!-- 热门音乐 -->
  <view class="content-info-list">
    <view class="list-title" >热门歌曲</view>
    <view class="list-inner" >
      <view class="list-item" wx:for="{{hotMusic}}" wx:key="this">
        <image src="{{item.coverImg}}"></image>
        <view>{{item.title}}</view>
      </view>
    </view>
  </view>
</scroll-view>