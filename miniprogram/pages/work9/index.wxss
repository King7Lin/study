.content{
  position: relative;
  bottom: 0;
  width: 90%;
  text-align: center;
  margin: 20rpx 40rpx;
}
.nav{
  display: flex;
}
.tab{
  flex: 1;
  font-size: 70rpx;
  background-color: gray;
}
.selected{
  background-color: red;
}
.a{
  display: flex;
  flex-direction: row;
}
.list{
  flex: 9;
  border: 1px solid black;
  /* height: 10rpx; */
  font-size: 50rpx;
  margin: 10rpx 0;
  border-radius: 30rpx;
  box-shadow: 1px 1px 1px #000;
}
/* .income{
  background-color: #369;
}
.pay{
  background-color: #963;
} */
.total{
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  font-size: 50rpx;
}
.balance{
  width: 100%;
  text-align: center;
  font-size: 50rpx;
}
.del{
  flex: 1;
  height: 100%;
  width: 8%;
  margin: 10rpx 0;
  border-radius: 50rpx 50rpx 50rpx 50rpx;
  font-size: 50rpx;
  color: #fff;
  border: 1px solid #000;
  background-color: red;
}
.allpay{
  flex: 1;
}
.allin{
  flex: 1;
}